{{components
  btn: form_inputs.button
}}

<h2 class="mt-3">Buttons</h2>
<div class="c-bg-gray85  ph-4 pt-4 pb-2">
  <div class="pb-2">
    <btn>default</btn>
    <btn :disabled>disabled</btn>
    <btn theme="outline">outline</btn>
    <btn theme="light">light</btn>
    <btn theme="clear">clear</btn>
  </div>
  <div>
    <btn theme="clear light">clear and light</btn>
    <btn theme="outline light">outline and light</btn>
  </div>
</div>
